<script>
    $('form.ajax').on('submit', function () {
        debugger
        var that = $(this),
            url = that.attr('action'),
            type = 'POST',
            data = {};
        that.find('[name]').each(function (index, value) {
            var that = $(this),
                name = that.attr('name'),
                value = that.val();
            data[name] = value;
        });

        $.ajax({
            url: '@Url.Action("OnQuoteRequest", "Contact")',
            type: 'POST',
            data: data,
            success: function (response) {
