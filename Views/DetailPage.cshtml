                    @Html.Partial("_Breadcrumb")

                    //var blogList = Model.Children.OrderByDescending(c => c.CreateDate).Where(x => x.IsVisible()).Take(4);
                    var colStyle = 12;
                    var PageSize = Convert.ToInt32(Model.GetProperty("numberOfBlogs").Value());
                    var page = 1;
                    int.TryParse(Request.QueryString["page"], out page);
                    var blogList = Model.Children().Where(x => x.IsDocumentType("blogPost")).OrderByDescending(x => x.CreateDate);
                    var totalPages = (int)Math.Ceiling((double)blogList.Count() / (double)PageSize);
                    <section class="container">
                        <div class="sitecore_services blog">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class=" pb-40">
                                        @{
                                            <div class="row">
                                                @if (page > totalPages)
                                                {
                                                    page = totalPages;
                                                }
                                                @if (page < 1)
                                                {
                                                    page = 1;
                                                }
                                                @foreach (var selectedBlog in blogList.Skip((page - 1) * PageSize).Take(PageSize).OrderByDescending(x => x.CreateDate))
