                                                                            <a href="@selectedBlog.Url" class="them_text" role="button">Read more</a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    colStyle = 6;
                                                }
                                            </div>

                                            <div class="container page_bar">
                                                <div class="row">
                                                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                                        <ul class="list-unstyled text-center">
                                                            @if (totalPages > 1)
                                                            {
                                                                if (page > 1)
                                                                {
                                                                    <li class="pag-link"><a href="?page=@(page - 1)"><i class="fa fa-angle-double-left"></i></a></li>
                                                                }
