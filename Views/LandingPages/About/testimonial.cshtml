@inherits Umbraco.Web.Mvc.UmbracoViewPage


<section id="carousel" class="our_testimonial">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="quote"><i class="fa fa-quote-left fa-4x"></i></div>
                <div class="carousel slide" id="fade_quote" data-ride="carousel" data-interval="3000">
                    <!-- Carousel indicators -->
                    <ul class="carousel-indicators">
                        <li data-target="#fade_quote" data-slide-to="0" class="active"></li>
                        <li data-target="#fade_quote" data-slide-to="1"></li>
                        <li data-target="#fade_quote" data-slide-to="2"></li>
                    </ul>
                    <!-- Carousel items -->
                    <div class="carousel-inner">
                        @Model.Value("testimonial")
                        <div class="quote quote_right"><i class="fa fa-quote-right fa-4x"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
