@inherits Umbraco.Web.Macros.PartialViewMacroPage
@{
    Layout = null;
}
@{
    var link1 = Umbraco.AssignedContentItem.Root();
    var links = (List<Umbraco.Web.Models.Link>)link1.GetProperty("externalLinks").Value();
    if (links.Count() > 0)
    {
        <div class="social_icon_bar">
            <ul class="list-unstyled">
                @foreach (var item in links)
                {
                    var className = @item.Name.ToLowerInvariant();
                    var newClassName = "fab fa-" + className;
                    if(className == "facebook")
                        newClassName = "fab fa-" + className + "-f";
                    <li class="@className"><a rel="noreferrer" href="@item.Url" target="@item.Target" class="white_text"><i class="@newClassName"></i></a></li>
                }
            </ul>
        </div>
    }
}